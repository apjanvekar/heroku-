<html>
<head>
    <title>BXR File Management System</title>
    <%= stylesheet_link_tag 'bxr' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
        if(IE)
        {
            window.onload = ResizeContentDiv;
            window.onresize = ResizeContentDiv;
        }
    </script>
</head>
<body>

    <div id="top">
        <div class="header">
            <div class="userSettings">
                <%= render :partial =>  'shared/logged_in_user_menu' %>
            </div>

            <div class="search">
                <%= render :partial =>  'shared/search_form' %>
            </div>
        </div>

        <div class="topNavigation">
            <div class="links">
                <%= render :partial =>  'shared/go_to_menu' %>
            </div>
        </div>
    </div>

    <div id="middle">
        <div class="actionLinks">
        	<% if params[:action] == "tag" || params[:action] == "list_tags" %>
				<%= render :partial => "/shared/tags" %>
			<% end %>
        </div>

        <div class="content">
            <table cellspacing="0" cellpadding="0">
                <tr>
                    <td>
                        <%= yield %>
                    </td>
                </tr>
            </table>
        </div>
    </div>

	<%= render :partial => "/shared/footer" %>

</body>
</html>